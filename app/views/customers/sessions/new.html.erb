
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">  
    <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
      <div class="login-form">
        <h3>Customer Sign In</h3>
        <form role="form">
        <div class="form-group">
         <label for="attribute">Email address</label>
         <%= f.email_field :email, class:"form-control"%>
        </div>
        <div class="form-group">
          <label for="attribute">Password</label>
          <%= f.password_field :password, class:"form-control"%>
        </div>            
        </form>
       </div>
      </div>
     </div>
  <% if devise_mapping.rememberable? -%>
    <div class="field col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<div class="actions col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
  <%= render "customers/shared/links" %>
</div>
  <div class="actions col-md-7 col-sm-7 col-md-offset-7 col-sm-offset-7">
    <%= f.submit "Sign In", class: "btn btn-theme-dark btn-lg" %>
  </div>
  </div>
<% end %>
