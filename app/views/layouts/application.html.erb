<!DOCTYPE html>
<html>
  <head>
    <title>Veterans Work</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body ng-app="veteransWork">
    <div ng-controller="TestController">

      <nav class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><%= image_tag "veterans_work_logo.png", height: "40", alt: "Company Logo" %></a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
              <li><a href="#">Link</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Edit Profile</a></li>
                  <li><a href="#">Change Password</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Separated link</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">One more separated link</a></li>
                </ul>
              </li>
            </ul>
              <%= form_tag "/companies", method: :get, class: "navbar-form navbar-left" do %>
                <div class="form-group">
                  <%= text_field_tag :query, nil, placeholder: "Search for a company", class: "form-control" %>
                  <%= submit_tag "Submit", type: "submit", class: "btn btn-default" %>
                </div>
              <% end %>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/about">Our Mission</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% if current_customer %>
                    <li><a href="/customers/edit">edit my profile</a></li>
                  <% elsif current_company %>
                    <li><a href="/companies/edit">edit my profile</a></li>
                  <% end %>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Logout #{current_company.name}", destroy_company_session_path, method: :delete if current_company %></li>
                  <li><%= link_to "Logout #{current_customer.email}", destroy_customer_session_path, method: :delete if current_customer %></li>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
      <div class="container well">
        <% if notice || alert %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>
      <div class="footer navbar-fixed-bottom">
        <div class="container">
          <div class="row">
            <div class="col-md-12">

            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
